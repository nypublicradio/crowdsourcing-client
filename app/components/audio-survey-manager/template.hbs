<div class="audio-survey__header">
  <div class="audio-survey__header-title">
  {{#if (eq step '1')}}
    Record yourself
  {{else if (eq step '2')}}
    Approve recording
  {{else if (eq step '3')}}
    Enter your info
  {{/if}}
  </div>
  
  <span>
    Step {{step}} of 3
  </span>

  {{#if showBadState}}
    <button {{action (mut openEscapeHatch) true}}>Show Bad State</button>
  {{/if}}
</div>

{{#if (eq step '1')}}
  {{audio-recorder question=audioQuestion next=(action next 'callId')}}
{{else if (eq step '2')}}
  {{#playback-screen callId=callId as |url isReady|}}
    
    {{#action-button click=(action next 'url' url) disabled=(not isReady)}}
      Use This Recording
    {{/action-button}}
  
  {{/playback-screen}}
{{else if (eq step '3')}}
  {{personal-info
    onSubmit=(action finish)
    questions=survey.questions
    submission=submission}}
{{/if}}

{{#if openEscapeHatch}}
  {{escape-modal}}
{{/if}}
