<div class="audio-survey__header step-{{step}}">
  {{#if backText}}
    <button class="audio-survey-header-button" {{action (if (eq step '2') back cancel)}}>{{backText}}</button>
  {{/if}}
  
  <span>
    Step {{step}} of 3
  </span>
</div>

{{#if (eq step '1')}}
  {{audio-recorder question=audioQuestion next=(action next 'callId')}}
{{else if (eq step '2')}}
  {{#playback-screen callId=callId as |url isReady|}}
    
    {{#action-button click=(action next 'url' url) disabled=(not isReady)}}
      Use This Recording
    {{/action-button}}
  
  {{/playback-screen}}
{{else if (eq step '3')}}
  {{personal-info
    onSubmit=(action finish)
    questions=survey.questions
    submission=submission}}
{{/if}}

{{#if openEscapeHatch}}
  {{escape-modal}}
{{/if}}
