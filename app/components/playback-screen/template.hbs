<div class="playback-screen__header">
  <div class="playback-screen__progress" style={{progressWidth}}></div>
  {{#unless noAudio}}
  <button class="playback-button" disabled={{initAudio.isRunning}} {{action 'playOrPause'}}>
    {{#if initAudio.isIdle}}
      {{#if isPlaying}}
      <span class="playback-pause"></span> Pause
      {{else}}
      <span class="playback-play"></span> Listen
      {{/if}}
    {{else}}
      Processing Audio...
    {{/if}}
  </button>
  
  <span>
    Your Recording
  </span>
  {{else}}
  <p class="playback-screen__error">
    There seems to be a problem loading the audio for call id: <code>{{callId}}</code>. Please tell digital ops.
  </p>
  {{/unless}}
</div>

{{yield submitURL initAudio.isIdle}}
